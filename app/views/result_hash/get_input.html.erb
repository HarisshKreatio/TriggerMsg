<section class="vh-100 bg-light">

  <h2 class="fw-bold mb-3 text-center pt-3">Input Result Hash</h2>

  <div class="container p-2">
    <%= form_tag({ controller: "result_hash", action: "index" }, method: "get", multipart: true, class: "row g-3", id: "myForm") do %>

      <div class="col-md-12">
        <div class="form-outline form-white mb-4">
          <%= text_area_tag :inputResultHash, nil, placeholder: 'Result Hash', class: 'form-control', style: 'height: 500px;', required: true %>
        </div>
      </div>

      <div class="container text-center">
        <button type="reset" class="btn btn-danger text-center col-md-2" id="reset-btn">Reset</button>
        <%= submit_tag "Search", class: "btn btn-primary text-center col-md-2" %>
      </div>

    <% end %>
  </div>

</section>

