<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2">Login Elastic Search</h2>
              <br>

              <%= form_tag({ controller: "elastic_search", action: "authenticate" }, method: "post", multipart: true) do %>

                <div class="form-outline form-white mb-4">
                  <%= text_field_tag :ip_address, nil, required: true, placeholder: 'Enter IP address', class: 'form-control' %>
                </div>

                <div class="form-outline form-white mb-4">
                  <%= text_field_tag :port, nil, required: true, placeholder: 'Enter port', class: 'form-control' %>
                </div>

                <% if @auth.present? %>
                  <div class="form-outline form-white mb-4">
                    <%= text_field_tag :username, 'elastic', required: true, placeholder: 'Enter username', class: 'form-control' %>
                  </div>

                  <div class="form-outline form-white mb-4">
                    <%= password_field_tag :password, nil, required: true, placeholder: 'Enter password', class: 'form-control' %>
                  </div>
                <% end %>

                <%= text_field_tag :auth, @auth, required: true, hidden: true %>

                <%= submit_tag "Proceed", class: "btn btn-success" %>
              <% end %>

            </div>


          </div>
        </div>
      </div>
    </div>
  </div>
</section>
