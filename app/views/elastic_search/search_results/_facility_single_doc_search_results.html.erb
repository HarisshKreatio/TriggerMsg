<div class="scrollme">
<table class="table table-bordered table-hover" style="width: 170% !important;">
  <thead class="table-head">
  <tr>
    <th scope="col" class="col">SL.No</th>
    <th scope="col" class="col">Score</th>
    <th scope="col" class="col">Doc Id</th>
    <th scope="col" class="col">StableId</th>
    <th scope="col" class="col">Name</th>
    <th scope="col" class="col">Alias</th>
    <th scope="col" class="col">NPI</th>
    <th scope="col" class="col">Location StableId</th>
    <th scope="col" class="col">Network Name</th>
    <th scope="col" class="col">Action</th>
  </tr>
  </thead>

  <% count = 0 %>

  <% @response['hits']['hits'].each do |each_doc| %>
    <tbody>
    <tr>
      <td><%= count += 1 %></td>
      <td><%= each_doc&.dig('_score') %></td>
      <td><%= each_doc&.dig('_source', 'id') %></td>
      <td><%= each_doc&.dig('_source', 'stableId') %></td>
      <td><%= each_doc&.dig('_source', 'facility', 'name') %></td>
      <td><%= each_doc&.dig('_source', 'facility', 'alias') %></td>
      <td><%= each_doc&.dig('_source' ,'facility', 'identifier')&.map { |i| i['value'] if i['type'] == 'NPI' }&.compact[0] %></td>
      <td><%= each_doc&.dig('_source' ,'location', 0, 'stableId') %></td>
      <td><%= each_doc&.dig('_source' ,'network', 0, 'name') %></td>
      <td>
        <a href="<%= elasticsearch_view_cluster_path(doc_id: each_doc["_source"]["id"]) %>" class="text-dark tooltip-arrow bs-tooltip-top" data-bs-toggle="tooltip" data-bs-placement="top" title="view cluster">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-text" viewBox="0 0 16 16">
            <path d="M5 4a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1zm-.5 2.5A.5.5 0 0 1 5 6h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5M5 8a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1zm0 2a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1z"/>
            <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1"/>
          </svg>
        </a>
      </td>
    </tr>
    </tbody>
  <% end %>

</table>
</div>
